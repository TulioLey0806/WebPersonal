@model WebPersonal_MVC.Models.Dto.CProvinDto
@{
    ViewData["Title"] = "Eliminar Provincia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="RemoverProvincia">
    <div class="container border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input hidden asp-for="CodProvin" />

        <div class="row">
            <h2 class="text-info">@ViewData["Title"]</h2>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label asp-for="CodProvin" class="form-label"></label>
                <input asp-for="CodProvin" class="form-control" disabled />
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label asp-for="NomProvin" class="form-label"></label>
                <input asp-for="NomProvin" class="form-control" disabled />
            </div>
        </div>

        <div class="d-grid gap-2 d-md-block mt-2">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-controller="Provincia" asp-action="IndexProvincia" class="btn btn-success">Regresar</a>
        </div>

    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}





