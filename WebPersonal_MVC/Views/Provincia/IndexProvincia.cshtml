@model IEnumerable<WebPersonal_MVC.Models.Dto.CProvinDto>
@{
    ViewData["Title"] = "Provincias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-4 boder">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">@ViewData["Title"]</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Provincia" asp-action="CreateProvincia" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Crear Nuevo</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Código</th>
                <th>Provincia</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.CodProvin</td>
                    <td>@item.NomProvin</td>
                    <td>
                        <a asp-controller="Provincia" asp-action="ActualizarProvincia" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                        <a asp-controller="Provincia" asp-action="RemoverProvincia" class="btn btn-danger"><i class="bi bi-trash-fill"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

