@model WebPersonal_MVC.Models.ViewModel.MunicipioDeleteViewModel
@{
    ViewData["Title"] = "Eliminar Municipio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="RemoverMunicipio">
    <div class="container border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input asp-for="CMunici.CodMunici" hidden />
        <input asp-for="CMunici.CodProvin" hidden />

        <div class="row">
            <h2 class="text-info">@ViewData["Title"]</h2>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Provincia</label>
                <select asp-for="CMunici.CodProvin" disabled class="form-select" asp-items="@Model.ProvinciaList">
                    <option value="">-- Seleccione una Provincia --</option>
                </select>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Código Municipio</label>
                <input asp-for="CMunici.CodMunici" disabled class="form-control" />
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Nombre Municipio</label>
                <input asp-for="CMunici.NomMunici" disabled class="form-control" />
            </div>
        </div>

        <div class="d-grid gap-2 d-md-block mt-2">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-controller="Municipio" asp-action="IndexMunicipio" class="btn btn-success">Regresar</a>
        </div>

    </div>
</form>


